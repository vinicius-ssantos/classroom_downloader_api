# Application
APP_NAME=Classroom Downloader API
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8001

# Database
DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/classroom

# Google OAuth2
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8001/auth/callback

# Security
ENCRYPTION_KEY=your-fernet-key-here

# Downloads
DOWNLOAD_DIR=/app/downloads
MAX_CONCURRENT_DOWNLOADS=5
DOWNLOAD_TIMEOUT_SECONDS=3600

# Workers
WORKER_POLL_INTERVAL_SECONDS=5
WORKER_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO

# yt-dlp Configuration
YTDLP_FORMAT=bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best
YTDLP_OUTPUT_TEMPLATE=%(id)s.%(ext)s
